{
  "name": "lol-wiki",
  "version": "1.0.0",
  "main": "server.js",
  "repository": "https://github.com/TheAncientOwl/lol-wiki.git",
  "author": "TheAncientOwl <dele.alex.o.o@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "concurrently": "^7.0.0",
    "express": "^4.17.2"
  },
  "devDependencies": {
    "nodemon": "^2.0.15"
  },
  "scripts": {
    "server": "nodemon server.js",
    "client": "yarn --cwd client start",
    "client-install": "yarn --cwd install",
    "dev": "concurrently \"yarn run server\" \"yarn run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false yarn run --cwd client install && yarn run --cwd client build"
  }
}
